<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:padding="20dp"
    android:background="#ffffff"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHANGE PASSWORD"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#336666" />

    <Spinner

        android:id="@+id/Spin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColorHint="#336666"
        android:visibility="gone"
        android:textColor="#336666" />

    <AutoCompleteTextView android:id="@+id/editText1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Enter Username"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColorHint="#336666"
        android:textColor="#336666" />

    <EditText android:id="@+id/editText2" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Enter Old Password"
        android:imeActionLabel="Sign_in"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColorHint="#336666"
        android:textColor="#336666" />

    <EditText android:id="@+id/editText3" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Enter New Password"
        android:imeActionLabel="Sign_in"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColorHint="#336666"
        android:textColor="#336666" />

    <Button android:id="@+id/btnchangepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="@drawable/roundedbutton" />

</LinearLayout>